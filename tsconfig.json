{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "baseUrl": "./src",
    "outDir": "out",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": false,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,

    "isolatedModules": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
